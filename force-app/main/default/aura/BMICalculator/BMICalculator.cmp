<aura:component controller="BMICalculatorController" implements="flexipage:availableForRecordHome,force:hasRecordId" access="global" >
    
    <aura:attribute name="age" type="Integer"/>
    <aura:attribute name="height" type="Decimal"/>
    <aura:attribute name="weight" type="Decimal"/>
    <aura:attribute name="bmi" type="Decimal"/>
    <aura:attribute name="status" type="String"/>
    <aura:attribute name="name" type="String"/>
    <aura:attribute name="recordId" type="Id"/>
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <lightning:card title="BMI Calculator">
        <div class="slds-p-around_medium">
            <lightning:input label="Name" value="{!v.name}" disabled="true"/>
            <lightning:input label="Age" type="number" value="{!v.age}" />
            <lightning:input label="Height (m)" type="number" step="0.01" value="{!v.height}" />
            <lightning:input label="Weight (kg)" type="number" step="0.1" value="{!v.weight}" />
            
            <lightning:button label="Calculate &amp; Save BMI" variant="brand" onclick="{!c.calculateBMI}" class="slds-m-top_medium"/>
            
            <aura:if isTrue="{!v.bmi != null}">
                <div class="slds-m-top_medium">
                    <p><b>BMI:</b> {!v.bmi}</p>
                    <p><b>Weight Status:</b> {!v.status}</p>
                </div>
            </aura:if>
        </div>
    </lightning:card>
</aura:component>
